/* pages/region/index.wxss */
page{
    background-color: #f2f2f2;
}
.loginInfo{
    background-color: #fff;
    padding: 20rpx 30rpx;
    margin:20rpx 0;
}
.loginInfo icon{
    color: #3984ff;
    font-size:20px;
    margin-top: -5px;
}
.flex-between{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.address{
    background-color: #fff;
    border-bottom: 1px solid #e2e2e2;
    padding: 20rpx 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #666;
}
.address view:first-child{
    flex: 1;
}
.address icon{
    color: #ff4c5e;
    font-size: 18px;
    margin-top: -5px;
}
.active{
    color: #3984ff !important;
}