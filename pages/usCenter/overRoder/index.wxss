} */

.move_box view.order_vim {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-around;
  align-content: space-around;
  margin-left: 20rpx;
}

.move_box view.order_vim view:first-child {
  font-weight: 600;
}

.move_box view.order_num {
 display: flex;
 flex-direction: column; 
 justify-content: space-around;
 align-content: space-around;
}
.move_box view.order_num view{
    text-align: right;
}
.order_footer {
  display: flex;
  padding: 20rpx 30rpx;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.but_box {
  display: flex;
}

.but_box button {
  margin-left: 30rpx;
}

.but_box .but_question {
  background-color: #06a5ff;
}

.but_box .but_cancel {
  background-color: #ff7b20;
}

.but_box .but_payment {
  background-color: #ff4c5e;
}

.but_box  .but_confirm {
  background-color: #ea857d;
}

.order_footer button {
  color: #fff;
  font-size: 12px;
}

