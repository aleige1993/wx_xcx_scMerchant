view, text {
  color: #666;
}

page {
  background: #f2f2f2;
}

.banner, .header-news, .sales-data, .dashboard-grid {
  margin-bottom: 10rpx;
}

.order_panl {
  margin-top: 20rpx;
  background-color: #fff;
}

.order_title {
  padding: 20rpx 30rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  color: #666;
}

.order_title view {
  margin-bottom: 10rpx;
}

.order_title view:last-child {
  margin-bottom: 0;
}

.order_box {
}

.move_box {
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 30rpx;
}

.move_box:last-child {
  border-bottom: 0;
}

.move_box image {
  width: 200rpx;
  height: 200rpx;
}

/* .move_box view {
